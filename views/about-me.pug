extends layout

block content
    div(class="About_Me" id="aboutMe")
        div(class="title")
            hr(class="main_hr")
            h2(class="big-title") About Me
            hr(class="main_hr")

        div(class="content_blocks")
            - for (let i = 0; i < data.length; i++)
                - if(data[i].dataValues.blogType === "aboutMe")
                        div(class="Content_Block")
                            - if(data[i].dataValues.imgUrl !== null)
                                img(src=`${data[i].dataValues.imgUrl}` class="content_block_image")
                            div(class="info_section")
                                h4(class="header_link") 
                                    a(href=`${data[i].dataValues.headerLink}`) #{data[i].dataValues.title}
                                h6(class="subtitle") #{data[i].dataValues.subtitle}
                                p(class='description-noImg') #{data[i].dataValues.content}
            div(class="Content_Block")
                - if(isConfirmed === true)
                    form(method="POST" action="/aboutMe")
                        div(class="form-group")
                            input(type="text" name="blogType" class="form-control hidden" id="blogType" value="aboutMe" readonly)

                        //- div(class="form-group")
                        //-     input(type="text" name="headerLink" class="form-control hidden" id="headerLink" value=`blog/` readonly)

                        div(class="form-group row")
                            div(class="col col-md-6")
                                label(for="title") Title
                                input(type="text" name="title" class="form-control" id="title" placeholder="Title")
                            div(class="col col-md-6")
                                label(for="subtitle") Subtitle
                                input(type="text" class="form-control" name="subtitle" id="subtitle" placeholder="Subtitle")
                        div(class="form-group row")
                            label(for="content") Content
                            textarea(type="text" class="form-control" name="content" id="content" placeholder="Content")
                        div(class="form-group")
                            label(for="img-url") Image Url
                            input(type="text" class="form-control" name="imgUrl" id="img-url" placeholder="Image Url")
                        button(type="submit" class="btn btn-primary") Submit