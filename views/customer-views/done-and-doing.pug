extends ../layout

block content

    div(class="Done_And_Doing" id="doneAndDoing")
        div(class="section-title-container")
            hr
            h2 What I have done &amp; What I am doing
            hr

        div(class="content_blocks")
            - for (let i = 0; i < data.length; i++)
                - if(data[i].dataValues.blogType === "doneAndDoing")
                    div(class="Content_Block")
                        - if(data[i].dataValues.imgUrl !== null)
                            img(src=`${data[i].dataValues.imgUrl}` class="content_block_image")
                        div(class="info_section")
                            h4(class="header_link")
                                a(href=`${data[i].dataValues.headerLink}`) #{data[i].dataValues.title}
                            h6(class="subtitle") #{data[i].dataValues.subtitle}
                            p(class='description-noImg') #{data[i].dataValues.content}

        div(class="btns-container")
            a(class="Learn_More_Btn" href="/projects/1") Past Projects