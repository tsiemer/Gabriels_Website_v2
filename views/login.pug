extends layout

block content
	div(class="Login")
		h1 Login
		form(class="Login_Form" action="/login" method="POST")
			div(class="form-group")
				label Username
				input(class="form-control form-group" autoFocus type="text" name="username")
			div(class="form-group")
				label Password
				input(class="form-control" type="password" name="password")
			button(class="btn btn-secondary" type="submit") Log in