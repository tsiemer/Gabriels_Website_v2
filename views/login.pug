extends layout

block content
	.loginBackgroundImage
		.container
			.loginContainer
				h1.center.loginHeader Login
				form(class="Login_Form" action="/login" method="POST")
					div(class="form-group")
						input(class="form-control form-group" autoFocus type="text" name="username" placeholder="Enter Username")
					div(class="form-group")
						input(class="form-control" type="password" name="password" placeholder="Enter Password")
					
					- if(errMessage)
						div(class="alert alert-danger" role="alert") #{errMessage}

					div.btns-container.multiple
						button(class="smallSubmitBtn" type="submit") Submit
						- if(errMessage)
							a(class="secondaryBtn" href="/") Home